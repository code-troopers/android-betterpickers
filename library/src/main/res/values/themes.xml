<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BetterPickersDialogFragment">
        <item name="bpDialogBackground">@drawable/dialog_full_holo_dark</item>
        <item name="bpTitleColor">@color/dialog_text_color_holo_dark</item>
        <item name="bpTextColor">@color/dialog_text_color_holo_dark</item>
        <item name="bpDeleteIcon">@drawable/ic_backspace_dark</item>
        <item name="bpCheckIcon">@drawable/ic_check_dark</item>
        <item name="bpKeyBackground">@drawable/key_background_dark</item>
        <item name="bpButtonBackground">@drawable/button_background_dark</item>
        <item name="bpTitleDividerColor">@color/default_keyboard_indicator_color_dark</item>
        <item name="bpDividerColor">@color/default_divider_color_dark</item>
        <item name="bpKeyboardIndicatorColor">@color/default_keyboard_indicator_color_dark</item>
    </style>

    <style name="BetterPickersDialogFragment.Light">
        <item name="bpDialogBackground">@drawable/dialog_full_holo_light</item>
        <item name="bpTitleColor">@color/dialog_text_color_holo_light</item>
        <item name="bpTextColor">@color/dialog_text_color_holo_light</item>
        <item name="bpDeleteIcon">@drawable/ic_backspace_light</item>
        <item name="bpCheckIcon">@drawable/ic_check_light</item>
        <item name="bpKeyBackground">@drawable/key_background_light</item>
        <item name="bpButtonBackground">@drawable/button_background_light</item>
        <item name="bpTitleDividerColor">@color/default_keyboard_indicator_color_dark</item>
        <item name="bpDividerColor">@color/default_divider_color_light</item>
        <item name="bpKeyboardIndicatorColor">@color/default_keyboard_indicator_color_light</item>
    </style>

    <style name="BetterPickersRadialTimePickerDialog">

    </style>

    <style name="BetterPickersRadialTimePickerDialog.PrimaryColor">
        <item name="bpHeaderBackgroundColor">?attr/colorPrimary</item>
        <item name="bpPreHeaderBackgroundColor">?attr/colorPrimaryDark</item>
        <item name="bpHeaderUnselectedTextColor">@color/radial_gray_light</item>
        <item name="bpHeaderSelectedTextColor">@color/bpWhite</item>

        <item name="bpBodyBackgroundColor">@color/bpWhite</item>
        <item name="bpBodySelectedTextColor">?attr/colorPrimary</item>
        <item name="bpBodyUnselectedTextColor">@color/date_picker_text_normal</item>

        <item name="bpButtonsBackgroundColor">@color/bpWhite</item>
        <item name="bpButtonsTextColor">?attr/colorPrimary</item>

        <item name="bpRadialBackgroundColor">@color/radial_gray_light</item>
        <item name="bpRadialTextColor">?attr/colorPrimary</item>
        <item name="bpRadialPointerColor">?attr/colorPrimary</item>

        <item name="bpAmPmCircleColor">?attr/colorPrimary</item>

        <item name="bpDisabledDayTextColor">@color/date_picker_text_disabled</item>
    </style>

    <style name="BetterPickersRadialTimePickerDialog.Light">
        <item name="bpHeaderBackgroundColor">@color/bpBlue</item>
        <item name="bpPreHeaderBackgroundColor">@color/bpDarker_blue</item>
        <item name="bpHeaderSelectedTextColor">@color/bpWhite</item>
        <item name="bpHeaderUnselectedTextColor">@color/radial_gray_light</item>

        <item name="bpBodyBackgroundColor">@color/bpWhite</item>
        <item name="bpBodySelectedTextColor">@color/bpBlue</item>
        <item name="bpBodyUnselectedTextColor">@color/date_picker_text_normal</item>

        <item name="bpRadialBackgroundColor">@color/radial_gray_light</item>
        <item name="bpRadialPointerColor">@color/bpBlue</item>
        <item name="bpRadialPointerAlpha">35</item>
        <item name="bpRadialTextColor">@color/bpBlue</item>

        <item name="bpAmPmCircleColor">@color/bpBlue</item>
        <item name="bpAmPmTextColor">@color/bpWhite</item>

        <item name="bpButtonsBackgroundColor">@color/bpWhite</item>
        <item name="bpButtonsTextColor">@color/bpBlue</item>
    </style>

    <style name="BetterPickersRadialTimePickerDialog.Dark">
        <item name="bpHeaderBackgroundColor">@color/bpDark_gray</item>
        <item name="bpPreHeaderBackgroundColor">@color/bpLight_gray</item>
        <item name="bpHeaderSelectedTextColor">@color/bpRed</item>
        <item name="bpHeaderUnselectedTextColor">@color/radial_gray_light</item>

        <item name="bpBodyBackgroundColor">@color/bpLight_gray</item>
        <item name="bpBodySelectedTextColor">@color/bpRed</item>
        <item name="bpBodyUnselectedTextColor">@color/bpWhite</item>

        <item name="bpRadialBackgroundColor">@color/bpDark_gray</item>
        <item name="bpRadialPointerColor">@color/bpRed</item>
        <item name="bpRadialTextColor">@color/bpWhite</item>

        <item name="bpAmPmCircleColor">@color/bpRed</item>
        <item name="bpAmPmTextColor">@color/bpWhite</item>

        <item name="bpButtonsBackgroundColor">@color/bpLight_gray</item>
        <item name="bpButtonsTextColor">@color/bpRed</item>
    </style>
